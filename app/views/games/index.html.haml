%div{class:"col-xs-9"}
  %h1 Listing games

%div{class:"col-xs-9"}
  %div
    %table{class:"table table-hover"}
      %thead
        %tr
          %th Name
          %th Date
          %th Show
          %th Edit
          %th Delete

      %tbody
        - @games.each do |game|
          %tr
            %td= game.name
            %td= game.date
            %td= link_to '', game, class: 'glyphicon glyphicon-list-alt'
            %td= link_to '', edit_game_path(game), class: 'glyphicon glyphicon-edit'
            %td= link_to '', game, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'glyphicon glyphicon-trash'
    &nbsp;
    %div
      = link_to 'New Game', new_game_path, class: 'btn btn-primary'
