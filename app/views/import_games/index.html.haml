%div{class:"col-xs-9"}
  %h1 Listing imports

%div{class:"col-xs-9"}
  %div
    %table{class:"table table-hover"}
      %thead
        %tr
          %th Date
          %th Games
      %tbody
        - @imports.each do |import|
          %tr
            %td= import.ut_date
            %td= import.games.count
            %td=# link_to '', player, class: 'glyphicon glyphicon-list-alt'
            %td=# link_to '', edit_player_path(player), class: 'glyphicon glyphicon-edit'
            %td=# link_to '', player, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'glyphicon glyphicon-trash'
    &nbsp;
    %div
      = link_to 'New Import', new_import_game_path, class: 'btn btn-primary'
