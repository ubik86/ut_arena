<!DOCTYPE html>
<html>
  <head>
    <title>UtArena</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">UT Arena</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <ul class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Games', :games %></li>
            <li><%= link_to 'Players', :players %></li>
            <li><%= link_to 'Scores', :scores %></li>
            <li><%= link_to 'Teams', :teams %></li>
          </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li class="navbar-brand">Hello <%= current_user.email %> !</li>
          <li><%= link_to 'Logout', :destroy_user_session, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Sign up', :new_user_registration %></li>
            <li><%= link_to 'Log in', :user_session %></li>
          <% end %>
        </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="jumbotron">
      <div class="container">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
