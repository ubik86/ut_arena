= form_for @score, :html => {:class => "form-horizontal"} do |f|
  - if @score.errors.any?
    #error_explanation
      %h2= "#{pluralize(@score.errors.count, "error")} prohibited this score from being saved:"
      %ul
        - @score.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :points, class: 'control-label col-md-2'
    = f.number_field :points
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
