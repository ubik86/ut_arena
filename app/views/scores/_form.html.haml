= form_for @score do |f|
  - if @score.errors.any?
    #error_explanation
      %h2= "#{pluralize(@score.errors.count, "error")} prohibited this score from being saved:"
      %ul
        - @score.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :points
    = f.number_field :points
  .field
    = f.label :game_at
    = f.datetime_select :game_at
  .actions
    = f.submit 'Save'
