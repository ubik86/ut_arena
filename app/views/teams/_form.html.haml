= form_for @team, :html => {:class => "form-horizontal"}  do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ut_name, class: 'control-label col-md-2'
    = f.text_field :ut_name
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
