%div{class:"col-xs-9"}
  %h1 Listing teams

%div{class:"col-xs-9"}
  %div
    %table{class:"table table-hover"}
      %thead
        %tr
          %th Ut name
          %th Show
          %th Edit
          %th Delete

      %tbody
        - @teams.each do |team|
          %tr
            %td= team.ut_name
            %td= link_to '', team, class: 'glyphicon glyphicon-list-alt'
            %td= link_to '', edit_team_path(team), class: 'glyphicon glyphicon-edit'
            %td= link_to '', team, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'glyphicon glyphicon-trash'
    &nbsp;
    %div
      = link_to 'New Team', new_team_path, class: 'btn btn-primary'
